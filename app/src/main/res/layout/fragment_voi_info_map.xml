<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="52dp"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@drawable/layout_voi_info"
        tools:context=".view.fragments.VoiInfoMapFragment"
        android:clickable="true">

    <TextView
            android:id="@+id/textView_fragment_voi_info_electricity"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_fragment_station_info_bike_icon"
            app:layout_constraintTop_toTopOf="@+id/imageView_fragment_voi_electric_icon"
            android:textSize="24sp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView_fragment_voi_electric_icon"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/textView_fragment_voi_name"
            android:text="Voi Scooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:layout_width="32dp"
            android:layout_height="31dp"
            android:src="@drawable/ic_power_black_24dp"
            android:id="@+id/imageView_fragment_voi_electric_icon"
            app:srcCompat="@drawable/ic_power_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.433" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_fragment_voi_name"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_fragment_voi_scan_qr"/>

    <Button
            android:text="TO VOI APP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_fragment_voi_scan_qr"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>